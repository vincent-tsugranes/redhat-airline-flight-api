{
  "name": "redhat-airline-flight-api",
  "version": "0.0.1",
  "description": "API to provide flight information",
  "author": {
    "name": "Vince Tsugranes",
    "url": "https://github.com/vincent-tsugranes"
  },
  "main": "src/server.js",
  "scripts": {
    "build": "tsc",
    "nodeshift": "nodeshift --expose",
    "postinstall": "npm run build",
    "format": "prettier --write --single-quote src/**/*.ts",
    "start": "node src/server.js",
    "start-dev": "nodemon -e ts -x ts-node src/server.ts | pino-pretty -t",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run format && git add ."
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/vincent-tsugranes/redhat-airline-flight-api.git"
  },
  "dependencies": {
    "@types/luxon": "^1.25.1",
    "env-var": "~6.3.0",
    "express": "~4.17.1",
    "faker": "^5.3.1",
    "helmet": "~4.1.0",
    "kube-probe": "~0.5.0",
    "luxon": "^1.25.0",
    "morgan": "~1.10.0",
    "pino": "~6.5.1"
  },
  "devDependencies": {
    "@types/express": "~4.17.8",
    "@types/node": "~12.12.54",
    "@types/pino": "~6.3.0",
    "husky": "~4.2.5",
    "nodemon": "~2.0.4",
    "nodeshift": "~7.1.0",
    "pino-pretty": "~4.1.0",
    "prettier": "~2.1.1",
    "ts-node": "~9.0.0",
    "typescript": "~4.0.2"
  }
}
