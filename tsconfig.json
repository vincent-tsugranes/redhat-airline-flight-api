{
  "compilerOptions": {
    "declaration": true,
    "module": "commonjs",
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "outDir": "out",
    "target": "es5",
    "lib": [
      "es2015"
    ],
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true
  },
  "include": [
    "src/*.ts"
  ],
  "exclude": [
    "./node_modules/**/*",
    "./build/**/*"
  ]
}

